<html>
<head>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <title>CRUD - Adicionar</title>
    {{> partials/toast.css}}
    {{> partials/style}}
    <style>
        input,
        textarea,
        button {
            color: white;
            background: none;
            box-shadow: none;
            border: 1px solid #cccccc;
            border-radius: 3px;
            padding: 15px;
            font-size: 16px;
            width: 60%;
            margin: auto;
            display: block;
        }

        textarea {
            height: 40%;
            max-height: 50%;
        }

        input:focus,
        textarea:focus {
            border-color: white;
        }

        button {
            border: 0;
            padding: 16px;
            cursor: pointer;
            background-color: #cccccc;
            color: black;
            font-weight: bold;
            border-radius: 30px;
            width: 30%;
            transition: background-color 350ms;
        }

        button:hover {
            background-color: rgba(204, 204, 204, 0.8);
        }
    </style>
</head>

<body>
    <form id="root" method="POST">
        <input required style="margin-bottom: 120px" type="text" name="title" placeholder="Title">
        <textarea required name="body" placeholder="Body"></textarea>
        <input required style="margin-top: 120px; margin-bottom: 40px" type="text" name="tags" placeholder="Tags">
        <button>SALVAR</button>
    </form>

    {{> partials/toast}}
</body>

</html>
